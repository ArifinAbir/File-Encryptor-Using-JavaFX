<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" spacing="20" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.rfn.fileencryptor.controller.SetFilePasswordController"
      prefWidth="600" prefHeight="550">

    <padding>
        <Insets top="30" right="40" bottom="30" left="40"/>
    </padding>

    <!-- Title -->
    <Label text="Set File Encryption Password">
        <font>
            <Font name="System Bold" size="24"/>
        </font>
    </Label>

    <!-- Instructions -->
    <TextArea fx:id="instructionText" editable="false" wrapText="true"
              prefWidth="520" prefHeight="250"
              style="-fx-background-color: #FFF3CD; -fx-border-color: #FFC107;"/>

    <!-- Password Fields -->
    <VBox spacing="15" alignment="CENTER">

        <VBox spacing="5">
            <Label text="File Encryption Password:*"/>
            <PasswordField fx:id="filePasswordField"
                           promptText="Enter a strong password"
                           prefWidth="400"/>
            <Label fx:id="passwordStrengthLabel" text="Password Strength: -"/>
        </VBox>

        <VBox spacing="5">
            <Label text="Confirm Password:*"/>
            <PasswordField fx:id="confirmFilePasswordField"
                           promptText="Re-enter password"
                           prefWidth="400"/>
        </VBox>

        <!-- Error Label -->
        <Label fx:id="errorLabel" textFill="red" wrapText="true"
               prefWidth="400" visible="false"/>

        <!-- Set Password Button -->
        <Button fx:id="setPasswordButton" text="Set Password and Continue"
                onAction="#handleSetPassword"
                prefWidth="400" prefHeight="40">
            <font>
                <Font name="System Bold" size="14"/>
            </font>
        </Button>

    </VBox>

</VBox>
